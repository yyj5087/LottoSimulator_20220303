        android:layout_marginTop="10dp"
        android:text="로또 한장 구매하기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnAuto"
        android:layout_marginTop="10dp"
        android:text="로또 자동 한장 구매하기"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
